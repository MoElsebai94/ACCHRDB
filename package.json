{
  "name": "gomaadb",
  "version": "1.4.16",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "cd server && node --watch index.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "npm run start:desktop",
    "start:desktop": "concurrently \"npm run client\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm --prefix client run build && electron-builder",
    "build:win": "npm --prefix client run build && electron-builder --win"
  },
  "build": {
    "appId": "com.arabcontractors.gomaadb",
    "productName": "HR Database",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "!server/node_modules/**/*",
      "client/dist/**/*",
      "package.json"
    ],
    "asar": false,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "client/public/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "client/public/logo.png"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  }
}